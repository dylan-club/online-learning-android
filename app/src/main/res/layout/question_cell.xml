<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E0F2F1">

            <RadioGroup
                android:id="@+id/answerRadioGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/questionTitleTextView">

                <View
                    android:id="@+id/questionDiv"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="?android:attr/listDivider" />

                <RadioButton
                    android:id="@+id/qaRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normalColor"
                    android:textSize="@dimen/normal_font"
                    tools:text="A. 五四运动" />

                <RadioButton
                    android:id="@+id/qbRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:textColor="@color/normalColor"
                    android:textSize="@dimen/normal_font"
                    tools:text="B. 辛亥革命" />

                <RadioButton
                    android:id="@+id/qcRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normalColor"
                    android:textSize="@dimen/normal_font"
                    tools:text="C. 抗日战争" />

                <RadioButton
                    android:id="@+id/qdRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normalColor"
                    android:textSize="@dimen/normal_font"
                    tools:text="D. 解放战争" />

            </RadioGroup>

            <TextView
                android:id="@+id/questionTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/normalColor"
                android:textSize="@dimen/normal_font"
                app:layout_constraintBottom_toTopOf="@+id/answerRadioGroup"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                tools:text="以下哪一个事件令你印象深刻？" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>